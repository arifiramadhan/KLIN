<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:ignore="ExtraText"
    android:background="#1E1E1E"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity">

    <ImageView
        android:id="@+id/landingImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/landingimg"
        android:layout_margin="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/bgLanding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg_landing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's explore and Start KLINing"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/landingImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="250dp"
        android:gravity="center" />

    <Button
        android:id="@+id/signup"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:text="Sign Up"
        android:textSize="15sp"
        android:gravity="center"
        android:backgroundTint="#1E7622"
        app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/welcome"
    app:layout_constraintEnd_toEndOf="parent"
        android:onClick="signUpClicked"
    android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/signin"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:text="Sign In"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#1E7622"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="signUpClicked"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>